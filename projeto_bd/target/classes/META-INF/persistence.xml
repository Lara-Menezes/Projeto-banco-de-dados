<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
    <persistence-unit name="TarefasPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>entity.Tarefa</class>
		<class>entity.Usuario</class>
		<class>entity.Categoria</class>
        
        <properties>
        	// altere para os dados do seu banco
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/meu-banco"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>  //seu user
            <property name="jakarta.persistence.jdbc.password" value="12345"/> //sua senha
            
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
